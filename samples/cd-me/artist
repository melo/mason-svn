% } else {
%   foreach $artist (sort keys %artists) {
% $artistlink = $artist;
% $artistlink=~s/ /_/g;
<a href="artist?artist=<%$artistlink%>"><%$artist%></a><br>
%   }
% }

<& Template,bottom=>1 &>

<%INIT>
my ($artistlink);
